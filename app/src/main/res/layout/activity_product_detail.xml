<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:background="@color/status"
    tools:context=".detail.ProductDetail">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/top"
    android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/belowcard"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/carousel"
                    app:showTopShadow="false"
                    app:bottomShadowAlpha="0.3"
                    app:imageScaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="560dp"
                    app:showNavigationButtons="false"
                    app:showCaption="true"
                    app:autoPlay="false"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_marginLeft="18dp"
                        app:cardCornerRadius="24dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="18dp"
                        android:backgroundTint="#C3EBF1F4" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:padding="6dp"
                            android:src="@drawable/baseline_arrow_back_24"
                            android:layout_height="wrap_content" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_marginLeft="18dp"
                        android:layout_alignParentBottom="true"
                        app:cardCornerRadius="24dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="68dp"
                        android:layout_marginTop="18dp"
                        android:backgroundTint="#C3EBF1F4" >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textColor="#DE3981"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/fulllike"

></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  |   "
        android:textColor="#DE3981"

        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="375"
        android:textColor="#DE3981"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/sharp_person_outline_24"

        ></TextView>
</LinearLayout>

                    </androidx.cardview.widget.CardView>



                      <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                          android:layout_marginRight="12dp"
                            android:gravity="right"
                          android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                app:cardCornerRadius="24dp"
                                android:elevation="0dp"
                                app:cardElevation="0dp"
                                android:layout_marginTop="18dp"
                                android:backgroundTint="#C3EBF1F4" >

                                <ImageView
                                    android:id="@+id/cart"
                                    android:layout_width="wrap_content"
                                    android:padding="6dp"
                                    android:src="@drawable/baseline_shopping_cart_24"
                                    android:layout_height="wrap_content" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:layout_marginLeft="14dp"

                                app:cardCornerRadius="24dp"
                                android:elevation="0dp"
                                app:cardElevation="0dp"
                                android:layout_marginTop="18dp"
                                android:backgroundTint="#C3EBF1F4" >

                                <ImageView
                                    android:id="@+id/userImage"
                                    android:layout_width="wrap_content"
                                    android:padding="6dp"
                                    android:src="@drawable/baseline_person_24"
                                    android:layout_height="wrap_content" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                          <androidx.cardview.widget.CardView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="6dp"
                              android:layout_marginLeft="14dp"

                              app:cardCornerRadius="24dp"
                              android:elevation="0dp"
                              app:cardElevation="0dp"
                              android:layout_marginTop="18dp"
                              android:backgroundTint="#C3EBF1F4" >

                              <ImageView
                                  android:layout_width="wrap_content"
                                  android:padding="6dp"
                                  android:src="@drawable/like"
                                  android:layout_height="wrap_content" />

                          </androidx.cardview.widget.CardView>

                          <androidx.cardview.widget.CardView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="6dp"
                              android:layout_marginLeft="14dp"
                              android:layout_marginBottom="38dp"

                              app:cardCornerRadius="24dp"
                              android:elevation="0dp"
                              app:cardElevation="0dp"
                              android:layout_marginTop="18dp"
                              android:backgroundTint="#C3EBF1F4" >

                              <ImageView
                                  android:id="@+id/share"
                                  android:layout_width="wrap_content"
                                  android:padding="6dp"
                                  android:src="@drawable/baseline_share_24"
                                  android:layout_height="wrap_content" />

                          </androidx.cardview.widget.CardView>



                      </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRODUCT PRICE"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/ab"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="₹ 599"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:textSize="22sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="You Save ₹ "
                            android:gravity="center"
                            android:textColor="#00d654"
                            android:textStyle="bold"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="8dp"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/save"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="900"
                            android:gravity="center"
                            android:textColor="#00d654"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/beforediscount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="₹ 1499"
                            android:textStyle="bold"
                        android:textColor="#b20032"
                        android:gravity="center"
                        android:background="@drawable/strike_through"
                            android:layout_marginTop="3dp"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="M.R.P. Inclusive of all taxes"
                            android:textStyle="bold"
                            android:textColor="#b20032"
                            android:gravity="center"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="3dp"
                            android:textSize="13sp" />
                    </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COLOR"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1"
                        android:textSize="18sp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/color"
                        android:layout_below="@+id/a"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:ignore="ExtraText" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/b"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIZE"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1"
                        android:textSize="18sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/size"
                        android:layout_below="@+id/b"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRODUCT INFORMATION"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/highlight"
                        android:layout_below="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/star"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1" />
                    <LinearLayout
                        android:id="@+id/producthighlight"
                        android:layout_below="@+id/highlight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/producthighlightitem1"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            tools:itemCount="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="match_parent"
                            android:background="@color/status"></View>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/producthighlightitem2"
                            android:layout_weight="1"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="8dp"
                            tools:itemCount="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/viewfulllinean"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_below="@+id/producthighlight"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/viewfulldetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW FULL DETAILS"
                            android:textColor="#b20032"
                            android:letterSpacing="0.1"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:drawableRight="@drawable/expand"
                            android:gravity="center"
                            android:drawablePadding="6dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:id="@+id/viewfullbind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HIDDE DETAILS"
                            android:textColor="#b20032"
                            android:letterSpacing="0.1"
                            android:layout_marginTop="8dp"

                            android:visibility="gone"
                            android:textStyle="bold"
                            android:drawableRight="@drawable/fold"
                            android:gravity="center"
                            android:drawablePadding="6dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            tools:ignore="MissingConstraints" />

                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="1dp"
                        android:background="@color/status"></View>
                    <TextView
                        android:id="@+id/sim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIMILAR"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similarproduct"
                        android:layout_below="@+id/sim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/similarproduct"
                         android:layout_height="2dp"
                        android:background="@color/status"></View>
                </RelativeLayout>
                 </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REVIEW"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:id="@+id/reviewRecycle"
                        android:layout_below="@+id/review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/userReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/reviewfulllinean"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_below="@+id/reviewRecycle"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/reviewfulldetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW MORE REVIEW"
                            android:textColor="#b20032"
                            android:letterSpacing="0.1"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:drawableRight="@drawable/expand"
                            android:gravity="center"
                            android:drawablePadding="6dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:id="@+id/reviewfullbind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HIDDE REVIEW"
                            android:textColor="#b20032"
                            android:letterSpacing="0.1"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:drawableRight="@drawable/fold"
                            android:gravity="center"
                            android:drawablePadding="6dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            tools:ignore="MissingConstraints" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/reviewfulllinean"
                        android:layout_height="2dp"
                        android:background="@color/status"></View>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="81dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mostsale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOST SALE"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:letterSpacing="0.1"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/most"
                        android:layout_below="@+id/mostsale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@+id/above"
        android:layout_alignBottom="@+id/top"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_margin="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="₹ 955"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/strike_through"
                    android:text="₹ 1500"></TextView>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
           android:layout_gravity="right|center"
            android:layout_margin="12dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:background="@drawable/buttonbackground"
                android:padding="8dp"
                android:backgroundTint="#b20032"
                android:layout_weight="1"
                android:text="BUY NOW"
                android:textColor="@color/white"
                android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addToCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_weight="1"
                android:text="ADD TO CART"
                android:background="@drawable/button_designe"
                android:textColor="@color/black"
                android:backgroundTint="#00d654"
                android:textStyle="bold">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
