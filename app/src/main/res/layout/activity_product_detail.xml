<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:background="@color/status"
    tools:context=".detail.ProductDetail">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/belowcard"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                tools:ignore="MissingConstraints">

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/carousel"
                    app:showTopShadow="false"
                    app:bottomShadowAlpha="0.3"
                    app:imageScaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="560dp"
                    app:showNavigationButtons="true"
                    app:showCaption="true"
                    app:autoPlay="true"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textColor="@color/textcolor"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/color"
                        android:layout_below="@+id/a"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="-1dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:ignore="ExtraText" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textColor="@color/textcolor"

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/size"
                        android:layout_below="@+id/b"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Detail"
                        android:textColor="@color/textcolor"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/detail"
                        android:layout_below="@+id/c"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_below="@+id/detail"
                         android:id="@+id/be"
                        android:layout_marginTop="10dp"
                        android:layout_height="2dp"
                        android:background="@color/status"></View>
                    <TextView
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp"
                        android:layout_below="@+id/be"
                        android:layout_marginBottom="120dp"
                       android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Similary Product"
                      />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#00FFFFFF"
                android:backgroundTint="#00FFFFFF">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similarproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_below="@+id/similarproduct"
                        android:layout_marginTop="10dp"
                        android:layout_height="2dp"
                        android:background="@color/white"></View>

                </RelativeLayout>
                 </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/rate"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/textcolor"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating/Review"></TextView>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_below="@+id/rate"
                        android:layout_width="wrap_content"
                        android:progressTint="@color/textcolor"
                        android:layout_marginLeft="18dp"
                        style="@style/ShapeAppearance.Material3.SmallComponent"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/input"
                        android:layout_marginLeft="18dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_below="@+id/ratingBar"
                        android:layout_marginRight="18dp"
                        app:boxStrokeColor="@color/textcolor"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/inputBox"
                            android:layout_height="120dp"
                            android:textColor="@color/textcolor"
                            android:textSize="16sp"
                            android:hint="Write Your Review" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reviewButton"
                        android:layout_below="@+id/input"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:background="@drawable/button_designe"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        ></androidx.appcompat.widget.AppCompatButton>

                    <View
                        android:layout_width="match_parent"
                        android:layout_below="@+id/reviewButton"
                        android:layout_marginTop="16dp"
                        android:id="@+id/vi"
                        android:layout_height="2dp"
                        android:background="@color/textcolor"></View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_below="@+id/vi"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="18dp"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:textColor="@color/textcolor"
                        android:drawableRight="@drawable/like"
                        android:layout_marginTop="6dp"
                        android:paddingRight="18dp"
                        android:drawablePadding="9dp"
                        android:paddingLeft="18dp"
                        android:text="You May Like"
                        ></TextView>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/most"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content"
                 />
                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/most2"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
