<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:id="@+id/toolbar"
    android:elevation="0dp"
    app:cardElevation="0dp"
android:backgroundTint="@color/status"
    android:layout_height="wrap_content"

>
    <TextView
        android:id="@+id/ab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUCT PRICE"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"

        android:layout_marginLeft="18dp"
        android:layout_marginRight="8dp"
        android:letterSpacing="0.1"
        android:textSize="18sp" />

</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/profilecard"
        android:layout_below="@+id/toolbar"

        app:cardElevation="5dp"
        android:elevation="5dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DA4F5C5A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FAC55757"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:backgroundTint="#20bed9"
                        android:src="@drawable/baseline_account_circle_24"
                        app:civ_border_color="#b20032" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/profileImage"
                        android:layout_alignBottom="@+id/profileImage"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="3dp"
                        android:backgroundTint="#C3EBF1F4"
                        android:elevation="0dp"
                        android:padding="6dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/baseline_camera_alt_24" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Sourabh Patel"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:letterSpacing="0.1"
                    android:text="7803841753"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#C3EBF1F4"
                    android:elevation="0dp"
                    android:padding="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Edit  "
                        android:textColor="#DE3981"></TextView>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCOUNT SETTING"
        android:layout_below="@+id/profilecard"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="8dp"
        android:letterSpacing="0.1"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/a"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginTop="3dp"
             android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/order"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingRight="16dp"
                 android:paddingLeft="6dp"
                 android:drawablePadding="6dp"
                 android:drawableLeft="@drawable/order_pic"

                 android:text="MY ORDERS"
                 android:drawableRight="@drawable/back_profile"
                 android:layout_below="@+id/profilecard"
                  android:layout_gravity="center"
                 android:textColor="#20bed9"
                 android:textStyle="bold"
                 android:letterSpacing="0.1"
                 android:textSize="14sp" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#B5D9EAE7"></View>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingRight="16dp"
                 android:paddingLeft="6dp"
                 android:drawablePadding="6dp"
                 android:text="FAVROITS"
                 android:drawableLeft="@drawable/baseline_favorite_24"
                 android:drawableRight="@drawable/back_profile"
                 android:layout_below="@+id/profilecard"
                 android:layout_gravity="center"
                 android:textColor="#20bed9"
                 android:textStyle="bold"
                 android:letterSpacing="0.1"
                 android:textSize="14sp" />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#B5D9EAE7"></View>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingRight="16dp"
                 android:paddingLeft="6dp"
                 android:drawablePadding="6dp"
                 android:drawableLeft="@drawable/reward"

                 android:text="@string/reward"
                 android:drawableRight="@drawable/back_profile"
                 android:layout_below="@+id/profilecard"
                 android:layout_gravity="center"
                 android:textColor="#20bed9"
                 android:textStyle="bold"
                 android:letterSpacing="0.1"
                 android:textSize="14sp"
                 tools:ignore="HardcodedText" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#B5D9EAE7"></View>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingRight="16dp"
                 android:paddingLeft="6dp"
                 android:drawablePadding="6dp"
                 android:drawableLeft="@drawable/condition"

                 android:text="@string/term"
                 android:drawableRight="@drawable/back_profile"
                 android:layout_below="@+id/profilecard"
                 android:layout_gravity="center"
                 android:textColor="#20bed9"
                 android:textStyle="bold"
                 android:letterSpacing="0.1"
                 android:textSize="14sp" />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#B5D9EAE7"></View>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="ABOUT US"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingRight="16dp"
                 android:paddingLeft="6dp"
                 android:drawablePadding="6dp"
                 android:drawableLeft="@drawable/free_icon_1__7_"

                 android:drawableRight="@drawable/back_profile"
                 android:layout_below="@+id/profilecard"
                 android:layout_gravity="center"
                 android:textColor="#20bed9"
                 android:textStyle="bold"
                 android:letterSpacing="0.1"
                 android:textSize="14sp" />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#B5D9EAE7"></View>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="SHARE"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingRight="16dp"
                 android:paddingLeft="6dp"
                 android:drawablePadding="6dp"
                 android:drawableLeft="@drawable/profileshare"

                 android:drawableRight="@drawable/back_profile"
                 android:layout_below="@+id/profilecard"
                 android:layout_gravity="center"
                 android:textColor="#20bed9"
                 android:textStyle="bold"
                 android:letterSpacing="0.1"
                 android:textSize="14sp" />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#B5D9EAE7"></View>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="LOG OUT"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingRight="16dp"
                 android:paddingLeft="6dp"
                 android:drawablePadding="6dp"
                 android:drawableLeft="@drawable/logout"
                 android:drawableRight="@drawable/back_profile"
                 android:layout_below="@+id/profilecard"
                 android:layout_gravity="center"
                 android:textColor="#20bed9"
                 android:textStyle="bold"
                 android:letterSpacing="0.1"
                 android:textSize="14sp" />

         </LinearLayout>

        </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>